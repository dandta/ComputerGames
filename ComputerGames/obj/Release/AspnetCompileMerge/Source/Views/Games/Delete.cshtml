@model ComputerGames.Models.CompGame

@{
    ViewBag.Title = "Delete";
}

<h2>Delete</h2>
<hr />
<h3>Are you sure you want to delete this game?</h3>
<hr />

@using (Html.BeginForm())
{
    @Html.AntiForgeryToken()

<div class="container details">
    <div class="col-md-2">
        <img src="@Url.Content(Model.Picture)" alt="No Pic" height="200" style="border: solid; border-width:thin">
    </div>

    <div class="col-md-10">
        <dl class="dl-horizontal">
                <dt>
                    @Html.DisplayNameFor(model => model.GameTitle):
                </dt>

                <dd>
                    @Html.DisplayFor(model => model.GameTitle)
                </dd>

                <dt>
                    @Html.DisplayNameFor(model => model.Platform):
                </dt>

                <dd>
                    @Html.DisplayFor(model => model.Platform)
                </dd>

                <dt>
                    @Html.DisplayNameFor(model => model.Genre):
                </dt>

                <dd>
                    @Html.DisplayFor(model => model.Genre)
                </dd>

                <dt>
                    @Html.DisplayNameFor(model => model.AgeRating):
                </dt>

                <dd>
                    @Html.DisplayFor(model => model.AgeRating)
                </dd>

                <dt>
                    @Html.DisplayNameFor(model => model.ReleaseDate):
                </dt>

                <dd>
                    @Html.DisplayFor(model => model.ReleaseDate)
                </dd>

                <dt>
                    @Html.DisplayNameFor(model => model.Price):
                </dt>

                <dd>
                    @Html.DisplayFor(model => model.Price)
                    <br />
                    <br />
                </dd>
                <dd>
                    <input type="submit" value="Delete" class="btn btn-danger" />
                    @Html.ActionLink("Cancel", "Index", null, new { @class = "btn btn-default" })
                </dd>
            </dl>
    </div>
</div>
}
@model ComputerGames.Models.CompGame

@{
    ViewBag.Title = "Details";
}

<h2>Details</h2>

<div class="container details">
    <hr />
    <div class="col-md-2">
        <img src="@Url.Content(Model.Picture)" alt="No Pic" height="200" style="border: solid; border-width:thin">
        <br /><br />
        <p class="name">@Html.DisplayFor(model => model.GameTitle)</p>
    </div>
    
    <div class="col-md-10">
        <dl class="dl-horizontal">
            
            <dt>
                @Html.DisplayNameFor(model => model.Platform):
            </dt>

            <dd>
                @Html.DisplayFor(model => model.Platform)
                <br />
                <br />
            </dd>

            <dt>
                @Html.DisplayNameFor(model => model.Genre):
            </dt>

            <dd>
                @Html.DisplayFor(model => model.Genre)
                <br />
                <br />
            </dd>

            <dt>
                @Html.DisplayNameFor(model => model.AgeRating):
            </dt>

            <dd>
                @Html.DisplayFor(model => model.AgeRating)
                <br />
                <br />
            </dd>

            <dt>
                @Html.DisplayNameFor(model => model.ReleaseDate):
            </dt>

            <dd>
                @Html.DisplayFor(model => model.ReleaseDate)
                <br />
                <br />
            </dd>

            <dt>
                @Html.DisplayNameFor(model => model.Price):
            </dt>

            <dd>
                @Html.DisplayFor(model => model.Price)
                <br />
                <br />
            </dd>
            <dt>
                @Html.DisplayNameFor(model => model.Preview):
            </dt>

            <dd>
                <a href="@Url.Content(Model.Preview)" target="_blank">Game Preview</a>
                <br />
                <br />
            </dd>

            <dt>
                @Html.DisplayNameFor(model => model.Likes):
            </dt>

            <dd>
                @Html.DisplayFor(model => model.Likes)
                <br />
                <br />
            </dd>

            <dt>
                @Html.DisplayNameFor(model => model.Dislikes):
            </dt>

            <dd>
                @Html.DisplayFor(model => model.Dislikes)
            </dd>

        </dl>
    </div>
    @Html.ActionLink("Back to List", "Index", null, new { @class = "btn btn-default" })
    @Html.ActionLink("Edit", "Edit", new { id = Model.Id })
</div>